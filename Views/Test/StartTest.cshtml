@model Test
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form method="post" asp-controller="Test" asp-action="GetResult">
                <input type="hidden" name="TestId" value="@Model.Id" />
                <input type="hidden" name="UserName" value="@User.Identity.Name" />
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <input type="hidden" name="Questions[@i]" value="@Model.Questions[i].Id" />
                    <label>@Model.Questions[i].Text</label><br />
                    @for (int j = 0; j < Model.Questions[i].Answears.Count; j++)
                    {
                        <input type="radio" value="@Model.Questions[i].Answears[j].Id" name="Answears[@i]" /> @Model.Questions[i].Answears[j].Text <br />
                    }
                }
                <br /><input type="submit" value="Send" />
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
